                        <th class="hidden-sm">prix_salle</th>
                        <th class="hidden-sm">prix_terasse</th>
                        <th class="hidden-sm"></th>
        
		</tr>
	</thead>
	
        <tbody>
    
    {% for cafe in cafes %}
      
            
            <tr>
                <td><a href="{{ path('voir',{'id' : cafe.id})}}">{{cafe.id}}</a></td>
                <td>{{cafe.nom}}</td>
                <td>{{cafe.adresse}}</td>
                <td>{{cafe.arrondissement}}</td>
                <td>{{cafe.geoLatitude}}</td>
                <td>{{cafe.prixComptoir}}</td>
                <td>{{cafe.prixSalle}}</td>
                <td>{{cafe.prixTerasse}}</td>
            </tr>

        
    {% endfor %}
    
    </tbody>
    </table>
    
    
{% endblock %}
