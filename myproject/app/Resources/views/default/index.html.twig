<br>


<form id='recherche' method='POST' action="{{path('Lister')}}">
    
    <table>
    
    <tr>
        
        <td>Nom : </td><td><input type="text" name="nom" /></td>
        
    </tr>
    
    <tr>
        
        <td>Adresse : </td><td><input type="text" name="adresse" /></td>
        
    </tr>
    
