</form>
<br>

 <p>
     {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('addCafe')}}" class="btn btn-success">Ajouter un cafe</a>
        
     {% endif %}
</p>
<br>
    
    <table class="table">
	<thead>
		<tr>
			<th>id</th>
                        <th>nom</th>
                        <th>adresse</th>
                        <th>arrondissement</th>
                        
       
                        
                        <th class="hidden-sm">geo_latitude</th>
